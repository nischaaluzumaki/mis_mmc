@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_admin";

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Courses</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Admin</a>
                    </li>
                    <li class="breadcrumb-item active"> Course</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                       
                        <form class="search-bar" style="float: left; ">
                            <input type="text" class="form-control" placeholder="Enter keywords" style="float: left">
                            <a href="">
                                <i class="icon-magnifier"></i>
                            </a>
                        </form>
                        <a style="margin-left: 10px;"  asp-controller="AdminCourse" asp-action="AddCourse">
                            <button type="button" class="btn btn-primary">Add new</button>
                        </a>
                        <a style="margin-left: 5px;" asp-controller="AdminCourse" asp-action="AppointLecturer" >
                            <button type="button" class="btn btn-primary">Appoint Lecturer</button>
                        </a>
                         <a style="margin-left: 5px;"  asp-action="UpdateLecturer" asp-controller="AdminCourse">
                             <button type="button" class="btn btn-primary">Update Lecturer</button>
                             </a>

                    </div>
                   


                    <!-- /.card-header -->
                    <div class="card-body">
                       
                        <table id="example2" class="table table-bordered table-hover table-responsive">
                            <thead>
                            <tr>
                                <th>S.No</th>
                                <th>Program</th>
                                <th>Semester/Year</th>
                                <th>Course name</th>
                                <th>Description</th>
                                <th>Syllabus</th>
                                <th>Lecturer</th>
                                <th>Action</th>
                                
                            </tr>
                            </thead>
                            <tbody>

         @{
                                                         int i = 1;
                                                       }
                                                       @foreach (var item in ViewBag.data)

                                                       {

                                                           <tr>
                                                               <td>@i</td>
                                                               <td>@item.ProgramModel.name</td>
                                                               <td>@item.sem_year</td>
                                                               <td>@item.name</td>
                                                               <td>@item.description</td>
                                                               <td><a href="@item.file>"> </a></td>
                                                               <td>@item.lecturer</td>




                                                               <td>
                                                                   <a asp-controller="AdminCourse" asp-action="UpdateCourse" asp-route-id="@item.s_no">
                                                                       <button style="width: 70px;" type="button" class="btn btn-info">Edit</button>
                                                                   </a>
                                                                   <a asp-controller="AdminCourse" asp-action="DeleteCorse" asp-route-id="@item.s_no" onclick="return confirm('Are you sure want to delete? ')">
                                                                       <button type="button" class="btn btn-danger">Delete</button>
                                                                   </a>
                                                               </td>
                                                           </tr>
                                                           i++;
                                                       }

                            </tbody>

                        </table>
                    </div>

                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


                <!-- /.card-header -->

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>


    <!-- /.container-fluid -->
</section>