@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_admin";

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Appoint Lecturer</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Admin</a>
                    </li>
                     <li class="breadcrumb-item "> Course</li>
                    <li class="breadcrumb-item active"> Appoint Lecturer</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
               <div class="card">
                         <div class="card-body">
                         <div class="card-title">Appoint Lecturer Form</div>
                         <hr>
                          <form method="post" asp-action="AppointLecturer">
                              <div class="form-group">
                                  <label for="input-1">Enter unique id of course</label>
                                  <input type="text" class="form-control" id="input-1" placeholder="Enter Name" name="course" required >
                                 
                              </div>
                              <div class="form-group">
                                  <label for="input-2">Enter unique id of teacher</label>
                                  <input type="text" class="form-control" id="input-2" placeholder="Enter Name" name="teacher" required >
                                 
                              </div>
                              
                        
                              <div class="form-group">
                          <button type="submit" class="btn btn-light px-5"> Appoint</button>
                        </div>
                        </form>
                       </div>
                       </div>
                    </div>

                <!-- /.card -->


                <!-- /.card-header -->

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
   

    <!-- /.container-fluid -->
</section>