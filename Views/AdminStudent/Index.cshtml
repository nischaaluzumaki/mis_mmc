@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_admin";

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Students</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Admin</a>
                    </li>
                    <li class="breadcrumb-item active"> Students</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                       
                        <form class="search-bar" style="float: left; ">
                            <input type="text" class="form-control" placeholder="Enter keywords" style="float: left">
                            <a href="">
                                <i class="icon-magnifier"></i>
                            </a>
                        </form>
                        <a style="margin-left: 20px;" asp-controller="AdminStudent" asp-action="AddStudent" >
                            <button type="button" class="btn btn-primary">Add new</button>
                        </a>
                        <a style="margin-left: 5px;" asp-controller="AdminStudent" asp-action="Admission" >
                            <button type="button" class="btn btn-primary">Admission</button>
                        </a>
                        
                        

                    </div>
                   

-
                    <!-- /.card-header -->
                    <div class="card-body">
                       
                        <table id="example2" class="table table-bordered table-hover table-responsive">
                            <thead>
                            <tr>
                                <th>S.No</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Date of Birth</th>
                                <th>Contact no</th>
                                <th>Address</th>
                                <th>Gender</th>
                                <th>Photo</th>
                                <th>Is_admitted?</th>
                                <th>Action</th>
                                
                            </tr>
                            </thead>
                            <tbody>

  @{
                                   int i = 1;
                               }
                            
                            @foreach (var item in ViewBag.data)

                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.name</td>
                                    <td>@item.email</td>
                                    <td>@item.dob</td>
                                    <td>@item.phone</td>
                                    <td>@item.address</td>
                                    <td>@item.gender</td>
                                    
                                    <td><img src="@item.file " style="height: 50px; width : 50px;"></td>
                                    <td>@item.is_admitted</td>




                                    <td>
                                        @if (item.is_admitted == true)
                                        {
                                            <a asp-action="UpdateStudent" asp-controller="AdminStudent">
                                                <button style="width: 70px;" type="button" class="btn btn-info"> Info</button>
                                            </a>
                                            
                                        }
                                       
                                        <a asp-action="UpdateStudent" asp-controller="AdminStudent">
                                            <button style="width: 70px;" type="button" class="btn btn-info">Edit</button>
                                        </a>
                                        <a onclick="return confirm('Are you sure want to delete? ')">
                                            <button type="button" class="btn btn-danger">Delete</button>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>

                        </table>
                    </div>

                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


                <!-- /.card-header -->

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>


    <!-- /.container-fluid -->
</section>