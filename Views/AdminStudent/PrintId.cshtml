@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/IDCard.css">
    <title>ID Card</title>
   
</head>
<body >
<div class="container">
    <div class="padding">
        <div class="font">
            <div class="companyname">Mechi Multiple<br><span class="tab">Campus</span></div>
            <div class="top">
                <img src="@ViewBag.image" alt="">
            </div>
            <div class="">
                <div class="ename">
                    <p class="p1"><b>@ViewBag.name</b></p>
                    <p>Student</p>
                </div>
                <div class="edetails">
                    <P><b>Uid :</b> @ViewBag.uid</P>
                    <P><b>Program :</b> @ViewBag.program</P>
                    <p><b>DOB :</b> @ViewBag.dob</p>
                    <p><b>Semester :</b> @ViewBag.sem</p>
                    <p><b>Contact no :</b> @ViewBag.phone</p>
                    <p><b>Address : </b>@ViewBag.address

                </div>

                <div class="signature">
                    <img src="~/images/signature.png" alt="">
                </div>

                 <div class="barcode">
                                   <img src="~/images/qr sample.png" alt="">
                               </div>
                

          
            </div>
        </div>
    </div>
       
</div>
</body>
</html>