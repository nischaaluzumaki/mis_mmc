        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Students list of @ViewBag.coursename</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Teacher</a>
                    </li>
                    <li class="breadcrumb-item active"> Student list </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
