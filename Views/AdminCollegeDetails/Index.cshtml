@model IEnumerable<mis_mmc.Models.CollegeDetails>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_admin";

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>College details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Admin</a>
                    </li>
                    <li class="breadcrumb-item active"> College Details</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                       
                        <form class="search-bar" style="float: left; ">
                            <input type="text" class="form-control" placeholder="Enter keywords" style="float: left">
                            <a href="">
                                <i class="icon-magnifier"></i>
                            </a>
                        </form>
                        <a style="margin-left: 10px;"  asp-controller="AdminCollegeDetails" asp-action="AddDetails">
                            <button type="button" class="btn btn-primary">Add new</button>
                        </a>
                      

                    </div>
                   


                    <!-- /.card-header -->
                    <div class="card-body">
                       
                        <table id="example2" class="table table-bordered table-hover table-responsive">
                            <thead>
                                   <tr>
                                       <th>
                                           @Html.DisplayNameFor(model => model.college_name)
                                       </th>
                                       <th>
                                           @Html.DisplayNameFor(model => model.phone_number_one)
                                       </th>
                                       <th>
                                           @Html.DisplayNameFor(model => model.email)
                                       </th>
                                       <th>
                                           @Html.DisplayNameFor(model => model.logo)
                                       </th>
                                       <th>
                                           @Html.DisplayNameFor(model => model.address)
                                       </th>
                                       <th></th>
                                   </tr>
                               </thead>
                               <tbody>
                           @foreach (var item in Model) {
                                   <tr>
                                       <td>
                                           @Html.DisplayFor(modelItem => item.college_name)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(modelItem => item.phone_number_one)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(modelItem => item.email)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(modelItem => item.logo)
                                       </td>
                                       <td>
                                           @Html.DisplayFor(modelItem => item.address)
                                       </td>
                                       <td>
                                           <a  type="button" class="btn btn-info"asp-action="UpdateDetails" asp-route-id="@item.s_no">Edit</a> |
                                            |
                                           <a type="button" class="btn btn-danger"asp-action="Delete" asp-route-id="@item.s_no">Delete</a>
                                       </td>
                                   </tr>
                           }
                               </tbody>

                        </table>
                    </div>

                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


                <!-- /.card-header -->

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>


    <!-- /.container-fluid -->
</section>