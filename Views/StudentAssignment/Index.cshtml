@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_student";

}
@model mis_mmc.Models.AssignmentModel
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Assignments</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Students</a>
