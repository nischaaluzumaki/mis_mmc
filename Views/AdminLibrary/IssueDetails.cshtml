@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_librarian";

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Issue Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Admin</a>
                    </li>
                    <li class="breadcrumb-item "> Library</li>
                    <li class="breadcrumb-item active"> Issue Details</li>
                    
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                       
                        <form class="search-bar" style="float: left; ">
                            <input type="text" class="form-control" placeholder="Enter keywords" style="float: left">
                            <a href="">
                                <i class="icon-magnifier"></i>
                            </a>
                        </form>
                       

                    </div>
                   


                    <!-- /.card-header -->
                    <div class="card-body">
                       
                        <table id="example2" class="table table-bordered table-hover table-responsive">
                            <thead>
                            <tr>
                                <th>S.No</th>
                                <th>Book name</th>
                                <th>Book id</th>
                                <th>Student name</th>
                                <th>Student id</th>
                                <th>Issue Date</th>
                                <th>Expiry Date</th>
                                <th>Is_returned</th>
                                <th>Return Date</th>
                                <th>Action</th>
                                <th></th>
                                
                            </tr>
                            </thead>
                            <tbody>

  @{
                                   int i = 1;
                               }
                            
                            @foreach (var item in ViewBag.data)

                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.BookModel.name</td>
                                    <td>@item.uid</td>
                                    <td>@item.StudentModel.name</td>
                                    <td>@item.StudentModel.uid</td>
                                    <td>@item.issued_date</td>
                                    <td>@item.expiry_date</td>
                                    <td>@item.is_returned</td>
                                    <td>@item.return_date</td>


                                    <td>
                                           @if (item.is_returned != true)
                                           {



                                               <a asp-controller="AdminLibrary" asp-action="ConfirmReturn" asp-route-id="@item.s_no">
                                                   <button  type="button" class="btn btn-info">Confirm Return</button>
                                               </a>
                                           }

                                    </td>
                                </tr>
                                i++;
                            }
                            </tbody>

                        </table>
                    </div>

                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


                <!-- /.card-header -->

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>


    <!-- /.container-fluid -->
</section>